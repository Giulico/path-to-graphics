{
    "env": {
        "browser": false,
        "es6": true
    },

    "extends": "airbnb-base",

    "rules": {
        "indent": [2, 4],
        "linebreak-style": 0,
        "no-multiple-empty-lines": [2, { "max": 3 }],
        "object-curly-spacing": ["error", "never"],
        "spaced-comment": 0,
        "comma-dangle": [2, "never"],
        "eol-last": [1, "never"],
        "padded-blocks": [1, { "classes": "always" }],
        "max-len": 0,
        "arrow-parens": 0
    },

    "settings": {
        "import/resolver": {
            "webpack": {
                "config": "webpack/webpack.config.js"
            }
        }
    }
}
